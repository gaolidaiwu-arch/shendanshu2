    <script>
        let flashInterval = null;
        const colors = ['#2ecc71', '#e74c3c', '#3498db', '#f1c40f', '#9b59b6', '#1abc9c'];
        const decorChars = ['â—', 'â˜…', 'â—†'];

        function generateTree() {
            const height = parseInt(document.getElementById('tree-height').value);
            const container = document.getElementById('tree-container');
            const message = document.getElementById('message');

            if (flashInterval) clearInterval(flashInterval);
            if (isNaN(height) || height < 5 || height > 15) {
                message.textContent = "è¯·è¾“å…¥ 5-15 ä¹‹é—´çš„æœ‰æ•ˆé«˜åº¦ï¼";
                container.innerHTML = "";
