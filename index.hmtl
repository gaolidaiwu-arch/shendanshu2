            }

            let tree = "";
            for (let i = 0; i < height; i++) {
                let space = " ".repeat(height - i - 1);
                let line = "";
                for (let k = 0; k < 2 * i + 1; k++) {
                    if (Math.random() < 0.2) {
                        const color = colors[Math.floor(Math.random() * colors.length)];
                        const char = decorChars[Math.floor(Math.random() * decorChars.length)];
